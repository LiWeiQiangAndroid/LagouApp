<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="15dp"
    android:padding="5dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <com.tedu.lagou.view.CircleImageView
            android:id="@+id/iv_lagou_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="3dp"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_lagou_logo"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_lagou_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:text="开发工程师"
                    android:textSize="16sp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                     />

                <TextView
                    android:id="@+id/tv_lagou_addtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|top"
                    android:text="发布时间：09:30"
                    android:textSize="12sp"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse"
                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp" >

                <TextView
                    android:id="@+id/tv_lagou_companyname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:text="达内时代科技集团"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_lagou_salary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="20k-25k"
                    android:textColor="#FF0000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/tv_lagou_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_lagou_workTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="经验"
                    android:textSize="12sp"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse"
                     />

                <TextView
                    android:id="@+id/tv_lagou_education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="学历"
                    android:textSize="12sp"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse"
                     />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_lagou_logo"
            android:layout_marginTop="15dp" >

            <TextView
                android:id="@+id/tv_lagou_finance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="发展阶段"
                android:textSize="12sp"
                android:textAppearance="?android:attr/textAppearanceSmallInverse"
                 />

            <TextView
                android:id="@+id/tv_lagou_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="人数"
                android:textSize="12sp"
                android:textAppearance="?android:attr/textAppearanceSmallInverse"
                 />

            <TextView
                android:id="@+id/tv_lagou_industry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="产业类型"
                android:textSize="12sp" 
                android:textAppearance="?android:attr/textAppearanceSmallInverse"
                />
            
            <TextView
                android:id="@+id/tv_lagou_companyUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:visibility="invisible"
                android:text="发布人"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>